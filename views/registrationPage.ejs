<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register</title>
</head>
<body>
  <%- include('partials/header') %>
  <main>
    <% if (errors) { %>
      <% errors.forEach(error => { %>
        <div><%= error.msg %></div>
      <% })%>
    <% } %>

    <form action="/auth/register" method="POST">
      <label class="registration-form__label--text">
        <b>Your Email:</b>
        <input type="email" name="email" value="<%= email ? email : '' %>" maxlength="255" required>
      </label>

      <label class="registration-form__label--text">
        <b>Username:</b>
        <input type="text" name="username" value="<%= username ? username : '' %>" maxlength="255" required>
      </label>

      <label class="registration-form__label--text">
        <b>Enter Password:</b>
        <input type="password" name="password" minlength="8" maxlength="255" required>
      </label>

      <label class="registration-form__label--text">
        <b>Confirm Password:</b>
        <input type="password" name="passwordConfirm" minlength="8" maxlength="255" required>
      </label>

      <button type="submit">
        Register
      </button>

      <div class="registration-form__login">
        <p>Already have an account?</p>
        <button type="button">
          <a href="/login">Log In</a>
        </button>
      </div>

    </form>
  </main>
</body>
</html>