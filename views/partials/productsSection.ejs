<div class="products-page__products-container">
  <div class="products-page__products-header">
    <h2>All Products</h2>
    <% if (user && user.status === "admin") { %>
      <button>
        <a href="/forms/new-product">Add New Product</a>
      </button>
    <% } %>
  </div>

  <% if (products.length === 0) { %>
    <h3>No products found matching your filters.</h3>
  <% } else { %>
    <ul class="products-page__products-list">
      <% products.forEach(product => { %>
        <li class="products-page__product-item">
          <div class="products-page__product-name">
            <h3><%= product.name %></h3>
          </div>
          <img src="<%= product.photo_url %>" alt="<%= product.name %>" />
          <button>
            <a href="/products/<%= product.id %>">View Product</a>
          </button>
        </li>
      <% }) %>
    </ul>
  <% } %>

  <button>
    <a href="/">Go Back</a>
  </button>
</div>